            MDFloatLayout:
                size_hint: .7, .07
                pos_hint: {"center_x": .5, "center_y": .56}
                TextInput:
                    id: password
                    hint_text: "Password"
                    font_name: "fonts/OpenSans-Bold.ttf"
                    size_hint_y: .75
                    pos_hint: {'center_x': .43,'center_y': 0.25}
                    background_color: 1, 1, 1, 0
                    foreground_color: rgba(0, 0, 59, 255)
                    cursor_color: rgba(0, 0, 59, 255)
                    font_size: "14sp"
                    cursor_width: "2sp"
                    multiline: False
                    password: True
                MDFloatLayout:
                    pos_hint: {"center_x": .45, "center_y": 0}
                    size_hint_y: .03
                    md_bg_color: 178/255, 178/255, 178/255, 255/255

            MDFloatLayout:
                size_hint: .7, .07
                pos_hint: {"center_x": .5, "center_y": .48}
                TextInput:
                    id: confirmpassword
                    hint_text: "Confirm Password"
                    font_name: "fonts/OpenSans-Bold.ttf"
                    size_hint_y: .75
                    pos_hint: {'center_x': .43,'center_y': 0.25}
                    background_color: 1, 1, 1, 0
                    foreground_color: rgba(0, 0, 59, 255)
                    cursor_color: rgba(0, 0, 59, 255)
                    font_size: "14sp"
                    cursor_width: "2sp"
                    multiline: False
                    password: True

                MDFloatLayout:
                    pos_hint: {"center_x": .45, "center_y": 0}
                    size_hint_y: .03
                    md_bg_color: 178/255, 178/255, 178/255, 255/255

            MDFloatLayout:
                Button:
                    text: "Sign Up "
                    size_hint: .5, .06
                    pos_hint: {"center_x": .5, "center_y": .10}
                    background_color: 0, 0, 0, 0
                    font_name: "fonts/OpenSans-Bold.ttf"
                    on_release:
                        app.register(email.text, password.text,confirmpassword.text, fname.text, lname.text, stud_id.text, year.text, course.text, section.text)
                    canvas.before:
                        Color:
                            rgb: rgba(1, 0, 0, 255)
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [10]

                MDFloatLayout:
                    halign: "center"
                    MDCheckbox:
                        id: checkbox
                        size_hint: None, None
                        size: "48dp", "48dp"
                        pos_hint: {"center_x": .15, "center_y": .4}

                    MDTextButton:
                        text: "I read and agree [u]Terms & Condition[/u]"
                        markup: True
                        font_name: "fonts/OpenSans-Bold.ttf"
                        font_size: "10sp"
                        pos_hint: {"center_x": .5, "center_y": .4}
                        on_release:
                            app.terms_condition()
    MDLabel:
        id: slide0
        text:"."
