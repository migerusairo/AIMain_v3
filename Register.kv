                color: rgba(135, 135, 135, 255)

            MDFloatLayout:
                size_hint: .7, .07
                pos_hint: {"center_x": .5, "center_y": .64}
                TextInput:
                    id: email
                    hint_text: "Email"
                    font_name: "fonts/OpenSans-Bold.ttf"
