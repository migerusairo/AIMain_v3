MDScreen:
    name: 'forgot_password'
    MDFloatLayout:
        MDIconButton:
            icon: "icons/back.png"
            pos_hint: {'center_y': 0.95}
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "Login"

        MDLabel:
            text: "F O R G O T "
            font_name: "fonts/Poppins.otf"
            font_size: "30sp"
            pos_hint: {"center_x": .6, "center_y": .85}
            color: rgba(24, 34, 34, 255)

        MDLabel:
            text: "Y O U R\nP A S S W O R D ? "
            font_name: "fonts/Poppins.otf"
            font_size: "20sp"
            pos_hint: {"center_x": .6, "center_y": .79}
            color: rgba(255, 0, 0, 255)

        MDLabel:
            text: "We send you verification."
            font_name: "fonts/PoppinsEL.otf"
            font_size: "12sp"
            pos_hint: {"center_x": .62, "center_y": .7}
            color: rgba(135, 135, 135, 255)

    MDFloatLayout:
        size_hint: .7, .07
        pos_hint: {"center_x": .5, "center_y": .64}
        TextInput:
            id: email
            hint_text: "Email"
            font_name: "fonts/OpenSans-Bold.ttf"
            size_hint_y: .75
            pos_hint: {'center_x': .43,'center_y': 0.25}
            background_color: 1, 1, 1, 0
            foreground_color: rgba(0, 0, 59, 255)
            cursor_color: rgba(0, 0, 59, 255)
            font_size: "14sp"
            cursor_width: "2sp"
            multiline: False
        MDFloatLayout:
            pos_hint: {"center_x": .45, "center_y": 0}
            size_hint_y: .03
            md_bg_color: 178/255, 178/255, 178/255, 255/255

    MDFloatLayout:
        Button:
            text: "Send Verification "
            font_size: '12sp'
            size_hint: .4, .06
            pos_hint: {"center_x": .65, "center_y": .55}
            background_color: 0, 0, 0, 0
            font_name: "fonts/OpenSans-Bold.ttf"
            on_release:
                app.reset_password(email.text)
            canvas.before:
                Color:
                    rgb: rgba(1, 0, 0, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]