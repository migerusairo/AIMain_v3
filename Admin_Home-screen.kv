MDScreen:
    user_list: user_list
    name: 'Adminhome'
    MDFloatLayout:
        MDIcon:
            icon: "assets/TCUlogo.jpg"
            pos_hint: {'center_x': 0.1, 'center_y': 0.95}
        MDLabel:
            text: "Users"
            font_name: "fonts/OpenSans-Bold.ttf"
            pos_hint: {'center_x': .65, 'center_y': 0.95}
            font_size: "18sp"

    MDIconButton:
        icon: "icons/logout.png"
        pos_hint: {'center_x': 0.9, 'center_y': 0.95}
        on_release:
            app.admin_logout()
            root.manager.transition.direction = "right"

    ScrollView:
        size_hint_y: .9
        do_scroll_x: False
        do_scroll_y: True
        MDBoxLayout:
            id : user_list
            orientation: 'vertical'
            size: (root.width, root.height)
            height: self.minimum_height
            size_hint: None,None
            pos_hint: {'Top': 10,}
            cols: 1
            spacing: 15

    Button:
        text: "Create Post"
        halign: "center"
        size_hint: .4, .06
        pos_hint: {"center_x": .7, "center_y": .10}
        background_color: 0, 0, 0, 0
        font_name: "fonts/OpenSans-Bold.ttf"

        on_release:
            root.manager.transition.direction = "left"
            root.manager.current = "Adminhome2"
        canvas.before:
            Color:
                rgb: rgba(0, 0, 0, 255)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [10]
           

              